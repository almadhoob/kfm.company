---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Steps from '~/components/widgets/Steps.astro';
import Features3 from '~/components/widgets/Features3.astro';

const metadata = {
  title: 'Pricing',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText
    tagline="Our Pricing"
    title="Flexible Pricing for Every Need"
    subtitle="Find the perfect plan that suits your marketing objectives and budget."
  />

  <!-- Pricing Widget ******************* -->

  <Prices
    title="Our Pricing Plans"
    subtitle="Choose a plan that fits your business requirements"
    prices={[
      {
        title: 'Starter',
        subtitle: 'Ideal for small businesses and startups',
        price: 49,
        period: 'per month',
        items: [
          {
            description: 'Basic digital marketing strategy',
          },
          {
            description: 'Social media management (1 platform)',
          },
          {
            description: 'Monthly customer performance reports',
          },
          {
            description: 'Email marketing for up to 1k subscribers',
          },
        ],
        callToAction: {
          text: 'Get Started',
          href: '#',
        },
      },
      {
        title: 'Professional',
        subtitle: 'Best for growing businesses and teams',
        price: 99,
        period: 'per month',
        items: [
          {
            description: 'Comprehensive marketing strategy',
          },
          {
            description: 'Social media management (5 platforms)',
          },
          {
            description: 'Weekly customer performance reports',
          },
          {
            description: 'Email marketing for up to 8k subscribers',
          },
          {
            description: 'Content creation and management',
          },
        ],
        callToAction: {
          text: 'Get Started',
          href: '#',
        },
        hasRibbon: true,
        ribbonTitle: 'Most Popular',
      },
      {
        title: 'Enterprise',
        subtitle: 'Perfect for large organizations',
        price: 249,
        period: 'per month',
        items: [
          {
            description: 'Custom marketing strategy and consulting',
          },
          {
            description: 'Social media management (20 platforms)',
          },
          {
            description: 'Real-time customer performance reports',
          },
          {
            description: 'Email marketing for unlimited subscribers',
          },
          {
            description: 'Advanced content creation services',
          },
        ],
        callToAction: {
          text: 'Get Started',
          href: '#',
        },
      },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Benefits of Our Packages"
    subtitle="Explore the features and advantages of all plans"
    columns={2}
    items={[
      {
        title: 'Scalable Options',
        description:
          'Our pricing plans are designed to grow with your business, offering flexibility as your needs evolve.',
        icon: 'tabler:scale',
      },
      {
        title: 'Transparent Pricing',
        description: 'No hidden costs or extra charges. What you see is what you get.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Secure Transactions',
        description: 'We use secure payment methods to protect your financial information.',
        icon: 'tabler:lock',
      },
      {
        title: 'Immediate Access',
        description: 'Get instant access to all features and services upon subscription.',
        icon: 'tabler:door-enter',
      },
      {
        title: 'Customizable Plans',
        description: 'Upgrade or adjust your plan to fit your specific needs and goals.',
        icon: 'tabler:adjustments',
      },
      {
        title: 'Dedicated Support',
        description: 'Our team is here to help with any questions or issues, ensuring a smooth experience.',
        icon: 'tabler:headset',
      },
    ]}
    classes={{ container: 'max-w-5xl' }}
  />

  <!-- Steps Widget ****************** -->

  <Steps
    title="How to Get Started"
    tagline="Simple steps to choose the right plan"
    isReversed={true}
    items={[
      {
        title: 'Review Plans',
        icon: 'tabler:number-1',
      },
      {
        title: 'Select Your Plan',
        icon: 'tabler:number-2',
      },
      {
        title: 'Sign Up or Log In',
        icon: 'tabler:number-3',
      },
      {
        title: 'Confirm the Selection',
        icon: 'tabler:number-4',
      },
      {
        title: 'Enter Payment Details',
        icon: 'tabler:number-5',
      },
      {
        title: 'Receive Confirmation',
        icon: 'tabler:number-6',
      },
      {
        title: 'Start Your Journey',
        icon: 'tabler:number-7',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1676276375809-da1416754e97?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=987&q=80',
      alt: 'Steps Image',
    }}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Pricing FAQs"
    subtitle="Find answers to your questions about our pricing and plans"
    columns={1}
    items={[
      {
        title: 'Does each plan include customer support?',
        description:
          'Yes, all our plans include access to customer support to help with any issues or questions you may have.',
      },
      {
        title: 'Is there a free trial available?',
        description:
          'We do not offer free trials, but we provide detailed information about each plan to help you make an informed decision.',
      },
      {
        title: 'Can I change my plan later?',
        description: 'Yes, you can upgrade or downgrade your plan at any time to better meet your needs.',
      },
      {
        title: 'What payment methods are accepted?',
        description: 'We accept major credit cards and online payment options for your convenience and security.',
      },
      {
        title: 'Are there any additional fees?',
        description:
          'No, there are no hidden fees. The price listed for each plan covers all included features and services.',
      },
    ]}
  />
</Layout>
