---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Content from '~/components/widgets/Content.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';

import Button from '~/components/ui/Button.astro';
import Image from '~/components/common/Image.astro';

const appStoreImg = '~/assets/images/apple-store.png';
const appStoreDownloadLink = '#';

const googlePlayImg = '~/assets/images/google-store.png';
const googlePlayDownloadLink = '#';

const metadata = {
  title: 'Mobile App',
};
---

<Layout metadata={metadata}>
  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="AI-Powered Marketing Assistant"
    image={{
      src: 'https://images.unsplash.com/photo-1551721434-8b94ddff0e6d?q=80&w=1965&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=987&q=80',
      alt: 'KFM Marketing Genius Hero Image',
    }}
  >
    <Fragment slot="title">
      <span class="text-accent dark:text-white highlight">KFM Marketing Genius</span>: <br /> innovative marketing <span
        class="hidden xl:inline">made effortless</span
      >
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        Transform your marketing strategies with cutting-edge AI technology and take your business to new heights.
      </span>
      Sign up now and start crafting effective marketing plans with ease.
    </Fragment>

    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </Hero2>

  <!-- Features3 Widget ************** -->

  <Features3
    id="features"
    title="How does KFM Marketing Genius work?"
    subtitle="Say goodbye to traditional marketing hassles and embrace a smarter approach. With KFM Marketing Genius, you can easily generate marketing plans, create compelling content, and track your campaign performance effortlessly."
    tagline="Step-by-step guide"
    columns={2}
    items={[
      {
        title: 'Download and install the app',
        description: `Start your journey by downloading KFM Marketing Genius from your device's app store or our official website.`,
        icon: 'tabler:square-number-1',
      },
      {
        title: 'Create an account',
        description:
          'Set up your account to access a full suite of AI-driven marketing tools and features tailored to your business needs.',
        icon: 'tabler:square-number-2',
      },
      {
        title: 'Generate marketing plans',
        description:
          'Utilize AI technology to craft comprehensive marketing plans based on your business goals and target audience.',
        icon: 'tabler:square-number-3',
      },
      {
        title: 'Monitor and optimize campaigns',
        description: `Track your campaign performance with real-time analytics and optimize strategies using AI-driven insights.`,
        icon: 'tabler:square-number-4',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'AI-Driven Insights',
        description:
          'Leverage advanced AI to gain valuable insights and recommendations for your marketing strategies and campaigns.',
        icon: 'tabler:brain',
      },
      {
        title: 'Creative Content Assistance',
        description:
          'Receive personalized content ideas and drafts for your marketing materials, including social media posts and email campaigns.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Comprehensive Campaign Tracking',
        description:
          'Track the performance of your marketing campaigns with detailed analytics and reporting features.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Seamless Integration',
        description: 'Integrate with various marketing platforms to streamline your workflow and enhance efficiency.',
        icon: 'tabler:plug',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1537458451507-adfc73de97ed?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=1674&q=80',
      alt: 'Feature Highlights Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Key Features</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Intelligent Recommendations',
        description:
          'Get AI-powered recommendations for optimizing your marketing strategies and achieving better results.',
        icon: 'tabler:checklist',
      },
      {
        title: 'Real-Time Analytics',
        description:
          'Access real-time data and analytics to make informed decisions and adjust your marketing efforts promptly.',
        icon: 'tabler:report-analytics',
      },
      {
        title: 'Customizable Templates',
        description:
          'Utilize customizable templates for various marketing needs, from social media posts to email newsletters.',
        icon: 'tabler:template',
      },
      {
        title: '24/7 Support',
        description: 'Access around-the-clock support for any questions or issues you may encounter with the app.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1537458769898-716468c1b373?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=2070&q=80',
      alt: 'Additional Features Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Additional Features</h3>
    </Fragment>
  </Content>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Our App in Numbers"
    stats={[
      { amount: '160K+', icon: 'tabler:download' },
      { amount: '45K+', icon: 'tabler:users' },
      { amount: '4.9', icon: 'tabler:star' },
    ]}
  />

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What our users say?"
    testimonials={[
      {
        testimonial: `KFM Marketing Genius has completely transformed the way we approach marketing. The AI-driven insights have helped us create more effective campaigns.`,
        name: 'Cary Kennedy',
        job: 'Marketing Director',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Cary Kennedy Image',
        },
      },
      {
        testimonial: `The app's seamless integration and real-time analytics have been game-changers for our team. It's incredibly intuitive and has saved us so much time.`,
        name: 'Josh Wilkinson',
        job: 'Digital Marketer',
        image: {
          src: 'https://images.unsplash.com/flagged/photo-1570612861542-284f4c12e75f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Josh Wilkinson Image',
        },
      },
      {
        testimonial:
          'KFM Marketing Genius is a must-have tool for any marketing professional. The intelligent recommendations have greatly enhanced our marketing strategies.',
        name: 'Sidney Hansen',
        job: 'Business Owner',
        image: {
          src: 'https://images.unsplash.com/photo-1512361436605-a484bdb34b5f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
          alt: 'Sidney Hansen Image',
        },
      },
    ]}
  />

  <!-- FAQs Widget ******************* -->

  <FAQs
    title="Frequently Asked Questions"
    items={[
      {
        title: 'What does this app do?',
        description:
          'KFM Marketing Genius is an AI-powered marketing assistant that helps you generate marketing plans, create content, and track campaign performance efficiently.',
      },
      {
        title: 'How can this app benefit my business?',
        description:
          'This app provides advanced AI-driven tools for crafting effective marketing strategies, saving time, and optimizing campaign results.',
      },
      {
        title: 'Is it available on all devices?',
        description: `Yes, the app is compatible with various devices, including smartphones, tablets, and computers, ensuring accessibility across platforms.`,
      },
      {
        title: 'What makes KFM Marketing Genius unique?',
        description:
          'The app stands out due to its intelligent recommendations, real-time analytics, and seamless integration with other marketing platforms.',
      },
      {
        title: 'Are there any costs involved?',
        description:
          'While the app itself may be free to download, there may be costs associated with premium features or subscription plans based on your needs.',
      },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    id="download"
    title="Get Started with KFM Marketing Genius!"
    subtitle="Harness the power of AI to elevate your efforts and achieve outstanding results."
  >
    <div slot="actions" class="flex max-w-sm gap-4">
      <Button variant="link" href={appStoreDownloadLink}>
        <Image src={appStoreImg} alt="App Store Image" width={200} />
      </Button>

      <Button variant="link" href={googlePlayDownloadLink}>
        <Image src={googlePlayImg} alt="Google Play Image" width={200} />
      </Button>
    </div>
  </CallToAction>
</Layout>
