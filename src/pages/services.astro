---
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Hero from '~/components/widgets/Hero.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'Services',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Our Services"
    title="Boost Your Brand with Us"
    subtitle="Explore our wide range of marketing services designed to elevate your brand and drive business growth. From strategic planning to creative execution, we provide the solutions you need to succeed."
    image={{
      src: 'https://cdn.pixabay.com/photo/2019/03/26/04/30/influencer-4081842_1280.jpg',
      alt: 'Marketing Services Image',
    }}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our Core Services"
    subtitle="Discover the range of services we offer to help your brand thrive."
    columns={3}
    items={[
      {
        title: 'Digital Marketing',
        description:
          'Harness the power of digital channels to reach your target audience. Our digital marketing services include SEO, SEM, social media marketing, and more.',
        icon: 'tabler:world',
      },
      {
        title: 'Content Creation',
        description:
          'Engage your audience with compelling content. We provide content strategy, creation, and distribution services to tell your brand story effectively.',
        icon: 'tabler:edit',
      },
      {
        title: 'Brand Strategy',
        description:
          'Develop a strong brand identity that resonates with your audience. Our brand strategy services help you define and communicate your brand values.',
        icon: 'tabler:image-in-picture',
      },
      {
        title: 'Public Relations',
        description:
          'Build and maintain a positive public image with our PR services. We handle media relations, crisis management, and event planning to enhance your reputation.',
        icon: 'tabler:speakerphone',
      },
      {
        title: 'Market Research',
        description:
          'Gain insights into your market and competitors. Our market research services provide the data and analysis you need to make informed business decisions.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Advertising',
        description:
          'Create impactful advertising campaigns that drive results. We offer media planning, buying, and creative services to ensure your message reaches the right audience.',
        icon: 'tabler:ad',
      },
      {
        title: 'Influencer Marketing',
        description:
          'Leverage the power of influencers to promote your brand. We connect you with influencers who align with your brand and help manage campaigns from start to finish.',
        icon: 'tabler:user-check',
      },
      {
        title: 'Email Marketing',
        description:
          'Reach your customers directly with targeted email campaigns. Our email marketing services include strategy, design, and automation to maximize engagement.',
        icon: 'tabler:mail',
      },
      {
        title: 'Event Marketing',
        description:
          'Create memorable experiences for your audience with our event marketing services. We handle everything from planning to execution to ensure your events are a success.',
        icon: 'tabler:calendar-event',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    items={[
      {
        title: 'Creative Excellence',
        description:
          'Our team of creative professionals delivers innovative and impactful marketing solutions that set your brand apart.',
        icon: 'tabler:brush',
      },
      {
        title: 'Strategic Approach',
        description:
          'We take a strategic approach to marketing, ensuring that every campaign is aligned with your business goals and delivers measurable results.',
        icon: 'tabler:target',
      },
      {
        title: 'Comprehensive Services',
        description:
          'From initial strategy to final execution, we provide a full range of marketing services to support your business at every stage.',
        icon: 'tabler:package',
      },
      {
        title: 'Client-Centric Focus',
        description:
          'We prioritize our clients and work closely with them to understand their needs and deliver customized marketing solutions.',
        icon: 'tabler:heart-handshake',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1535451801241-b5395e1d4a1b?q=80&w=1935&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=774&q=80',
      alt: 'Marketing Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Why Choose Us</h3>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    items={[
      {
        title: 'Time Efficiency',
        description:
          'Our streamlined processes and expert team ensure timely delivery of marketing campaigns, allowing you to focus on your core business.',
        icon: 'tabler:clock',
      },
      {
        title: 'Measurable Results',
        description:
          'We use data-driven strategies and analytics to track the performance of your campaigns and ensure they deliver measurable results.',
        icon: 'tabler:chart-pie',
      },
      {
        title: 'Cost-Effective Solutions',
        description:
          'We offer high-quality marketing services that provide excellent value for your investment, helping you achieve your goals within budget.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'Instant Support',
        description:
          'Our team is always ready to assist you with any marketing needs, ensuring that your campaigns run smoothly and effectively.',
        icon: 'tabler:headset',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1513128034602-7814ccaddd4e?q=80&w=1935&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&w=870&q=80',
      alt: 'Marketing Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Our Commitment</h3>
    </Fragment>
  </Content>

  <!-- Testimonials Widget *********** -->

  <Testimonials
    title="What Our Clients Say"
    testimonials={[
      {
        testimonial: `KFM Company has significantly boosted our brand's visibility and engagement through their expert digital marketing strategies. Their creative approach have made a tangible impact on our business.`,
        name: 'John Doe',
        job: 'Marketing Director, ABC Corp.',
        image: {
          src: 'https://images.unsplash.com/photo-1552058544-f2b08422138a?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=930&q=80',
          alt: 'John Doe Image',
        },
      },
      {
        testimonial: `The team at KFM Company has been instrumental in developing our brand strategy and executing successful marketing campaigns. Their expertise and dedication are truly unmatched.`,
        name: 'Jane Smith',
        job: 'CEO, XYZ Ltd.',
        image: {
          src: 'https://images.unsplash.com/photo-1509062522246-3755977927d7?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Jane Smith Image',
        },
      },
      {
        testimonial: `KFM's content creation and social media marketing services have elevated our online presence and driven significant growth. Their creative team consistently delivers exceptional results.`,
        name: 'Alice Brown',
        job: 'Social Media Manager, LMN Inc.',
        image: {
          src: 'https://images.unsplash.com/photo-1529626455594-4ff0802cfb7e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=774&q=80',
          alt: 'Alice Brown Image',
        },
      },
    ]}
  />
</Layout>
