---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About Us"
    image={{
      src: 'https://cdn.pixabay.com/photo/2023/10/10/05/52/website-8305450_1280.jpg',
      alt: 'KFM Company',
    }}
  >
    <Fragment slot="title"> KFM Company </Fragment>

    <Fragment slot="subtitle">
      At KFM Company, we leverage data-driven strategies to transform your marketing efforts. With offices in Bahrain,
      Riyadh, Doha, and Dubai, we provide innovative solutions to help you connect with your audience and achieve
      measurable results.
    </Fragment>
  </Hero>

  <!-- Stats Widget ****************** -->

  <Stats
    title="Statistics about us"
    stats={[
      { title: 'Offices', amount: '5' },
      { title: 'Clients', amount: '150+' },
      { title: 'Campaigns', amount: '500+' },
      { title: 'Awards', amount: '20' },
    ]}
  />

  <!-- Features3 Widget ************** -->

  <Features3
    title="Our services"
    subtitle="KFM Company offers a range of marketing solutions designed to help businesses thrive in a competitive digital landscape."
    columns={3}
    isBeforeContent={true}
    items={[
      {
        title: 'Data Analytics',
        description:
          'We use advanced data analytics to understand customer behavior and market trends, providing actionable insights.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Content Creation',
        description: 'Our team creates compelling content that engages your audience and drives brand awareness.',
        icon: 'tabler:file-text',
      },
      {
        title: 'SEO Optimization',
        description: 'Optimize your website to rank higher in search engine results and attract more organic traffic.',
        icon: 'tabler:search',
      },
      {
        title: 'Social Media Management',
        description: 'Manage and grow your social media presence with targeted strategies and engaging content.',
        icon: 'tabler:brand-twitter',
      },
      {
        title: 'Email Marketing',
        description: 'Reach your audience with personalized email campaigns that convert leads into customers.',
        icon: 'tabler:mail',
      },
      {
        title: 'Paid Advertising',
        description: 'Maximize your ROI with targeted PPC campaigns on Google, Facebook, and other platforms.',
        icon: 'tabler:ad',
      },
      {
        title: 'Brand Strategy',
        description:
          'Develop a strong brand identity that resonates with your target audience and differentiates you from competitors.',
        icon: 'tabler:image-in-picture',
      },
      {
        title: 'Web Development',
        description: 'Create a stunning website that reflects your brand and provides a seamless user experience.',
        icon: 'tabler:device-desktop',
      },
      {
        title: 'Market Research',
        description: 'Gain insights into your market and competitors to inform your business strategy.',
        icon: 'tabler:chart-pie',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Our values"
    subtitle="Our core values drive our approach and ensure we deliver exceptional results for our clients."
    items={[
      {
        title: 'Customer-centric approach',
        description: 'We prioritize our clientsâ€™ needs and tailor our strategies to meet their specific goals.',
      },
      {
        title: 'Constant Improvement',
        description: 'We continuously refine our techniques and embrace new technologies to stay ahead.',
      },
      {
        title: 'Ethical Practices',
        description: 'We conduct business with integrity, ensuring transparency and trust in all our interactions.',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title="Achievements"
    subtitle="Our accomplishments reflect our dedication to excellence and innovation in marketing."
    isReversed={true}
    items={[
      {
        title: 'Global reach',
        description: 'We serve clients across the GCC and beyond, helping them expand their market presence.',
        icon: 'tabler:globe',
      },
      {
        title: 'Positive customer feedback and reviews',
        description: 'Our clients consistently praise our results and the quality of our services.',
        icon: 'tabler:message-star',
      },
      {
        title: 'Awards and recognition as industry experts',
        description:
          'We have received numerous awards for our innovative marketing strategies and successful campaigns.',
        icon: 'tabler:award',
      },
    ]}
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Our locations"
    tagline="Find us"
    columns={4}
    items={[
      {
        title: 'Manama',
        description: '2476 Manama, Bahrain',
      },
      {
        title: 'Riyadh',
        description: '5678 Riyadh, Saudi Arabia',
      },
      {
        title: 'Doha',
        description: '4678 Doha, Qatar',
      },
      {
        title: 'Dubai',
        description: '9012 Dubai, UAE',
      },
    ]}
  />
</Layout>
